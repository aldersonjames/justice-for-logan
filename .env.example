# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Notifications (for form submissions)
VITE_ADMIN_EMAIL=stephen@example.com

# Netlify CMS (if using GitHub backend)
VITE_GITHUB_REPO=username/justice-for-logan
VITE_GITHUB_BRANCH=main

# Calendly Integration
VITE_CALENDLY_URL=https://calendly.com/your-username

# GoFundMe Campaign
VITE_GOFUNDME_URL=https://gofundme.com/your-campaign

# Social Media Links
VITE_FACEBOOK_URL=https://facebook.com/your-page
VITE_INSTAGRAM_URL=https://instagram.com/your-account
VITE_TWITTER_URL=https://twitter.com/your-account

# Petition URL
VITE_PETITION_URL=https://change.org/your-petition

# Sentry Error Tracking (optional)
VITE_SENTRY_DSN=

# Web Crawler Settings
CRAWLER_SEARCH_TERMS=Logan Federico,Justice for Logan,Stephen Federico,Alexander Dickey Columbia
CRAWLER_EMAIL_RECIPIENT=admin@example.com
